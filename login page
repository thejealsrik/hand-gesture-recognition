  <div class="login-box">
    <form action="javascript:void(0);" method="post" onsubmit="redirectToHome()">
      <label for="username">User Name:</label>
      <input type="text" id="username" name="username" required oninput="enableSubmitButton()">

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required oninput="enableSubmitButton()">

      <input type="submit" value="Login" id="submitBtn" disabled>
    </form>
  </div>

  <script>
    function enableSubmitButton() {
      var username = document.getElementById("username").value;
      var password = document.getElementById("password").value;
      var submitBtn = document.getElementById("submitBtn");

      if (username.trim() !== "" && password.trim() !== "") {
        submitBtn.disabled = false;
      } else {
        submitBtn.disabled = true;
      }
    }
     function redirectToHome() {
      // Redirect to homepage.html
      window.location.href = "homepage.html";
     // Prevent form submission
    }
  </script>
